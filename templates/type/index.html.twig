{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
    <h1>Type index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdTypevet</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.idTypevet }}</td>
                <td>{{ type.type }}</td>
                <td>
                    <a href="{{ path('type_show', {'idTypevet': type.idTypevet}) }}">show</a>
                    <a href="{{ path('type_edit', {'idTypevet': type.idTypevet}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_new') }}">Create new</a>
{% endblock %}
