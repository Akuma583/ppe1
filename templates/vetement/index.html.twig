{% extends 'base.html.twig' %}

{% block title %}Vetement index{% endblock %}

{% block body %}
    <h1>Vetement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdVet</th>
                <th>NomVet</th>
                <th>Prix</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vetement in vetements %}
            <tr>
                <td>{{ vetement.idVet }}</td>
                <td>{{ vetement.nomVet }}</td>
                <td>{{ vetement.prix }}</td>
                <td>{{ vetement.image }}</td>
                <td>
                    <a href="{{ path('vetement_show', {'idVet': vetement.idVet}) }}">show</a>
                    <a href="{{ path('vetement_edit', {'idVet': vetement.idVet}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vetement_new') }}">Create new</a>
